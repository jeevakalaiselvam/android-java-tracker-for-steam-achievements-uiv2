<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button2bg"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@color/button2bg" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/dinpror"
        android:shadowColor="#ffffff"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="10"
        android:text="Filter By"
        android:textColor="@color/colorTextWHITE"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/dinpror"
        android:shadowColor="#ffffff"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="10"
        android:text="Sort By"
        android:textColor="@color/colorTextWHITE"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locked" />

    <TextView
        android:id="@+id/title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/dinpror"
        android:shadowColor="#ffffff"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="10"
        android:text="View By"
        android:textColor="@color/colorTextWHITE"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hidden" />

    <TextView
        android:id="@+id/global"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_press"
        android:fontFamily="@font/dinprob"
        android:gravity="bottom"
        android:padding="8dp"
        android:text="GLOBAL"
        android:textColor="@color/colorTextWHITE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/name"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_press"
        android:fontFamily="@font/dinprob"
        android:gravity="bottom"
        android:padding="8dp"
        android:text="NAME"
        android:textColor="@color/colorTextWHITE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title2" />

    <TextView
        android:id="@+id/detail"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_press"
        android:fontFamily="@font/dinprob"
        android:gravity="bottom"
        android:padding="8dp"
        android:text="DETAILED"
        android:textColor="@color/colorTextWHITE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title3" />

    <TextView
        android:id="@+id/unlocked"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_press"
        android:fontFamily="@font/dinprob"
        android:gravity="bottom"
        android:padding="8dp"
        android:text="UNLOCKED"
        android:textColor="@color/colorTextWHITE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/global"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/percentage"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_press"
        android:fontFamily="@font/dinprob"
        android:gravity="bottom"
        android:padding="8dp"
        android:text="PERCENTAGE"
        android:textColor="@color/colorTextWHITE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toEndOf="@+id/global"
        app:layout_constraintTop_toBottomOf="@+id/title2" />

    <TextView
        android:id="@+id/minimal"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:background="@drawable/button_press"
        android:fontFamily="@font/dinprob"
        android:gravity="bottom"
        android:padding="8dp"
        android:text="MINIMAL"
        android:textColor="@color/colorTextWHITE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toEndOf="@+id/global"
        app:layout_constraintTop_toTopOf="@+id/detail" />

    <TextView
        android:id="@+id/locked"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_press"
        android:fontFamily="@font/dinprob"
        android:gravity="bottom"
        android:padding="8dp"
        android:text="LOCKED"
        android:textColor="@color/colorTextWHITE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/global" />

    <TextView
        android:id="@+id/hidden"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_press"
        android:fontFamily="@font/dinprob"
        android:gravity="bottom"
        android:padding="8dp"
        android:text="HIDDEN"
        android:textColor="@color/colorTextWHITE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/recent"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_press"
        android:fontFamily="@font/dinprob"
        android:gravity="bottom"
        android:padding="8dp"
        android:text="RECENT"
        android:textColor="@color/colorTextWHITE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toEndOf="@+id/locked"
        app:layout_constraintTop_toBottomOf="@+id/percentage" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:tint="@color/colorText"
        app:layout_constraintEnd_toEndOf="@+id/global"
        app:layout_constraintTop_toTopOf="@+id/global"
        app:srcCompat="@drawable/ic_clean" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:tint="@color/colorText"
        app:layout_constraintEnd_toEndOf="@+id/unlocked"
        app:layout_constraintTop_toTopOf="@+id/unlocked"
        app:srcCompat="@drawable/ic_clean" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:tint="@color/colorText"
        app:layout_constraintEnd_toEndOf="@+id/locked"
        app:layout_constraintTop_toTopOf="@+id/locked"
        app:srcCompat="@drawable/ic_clean" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:tint="@color/colorText"
        app:layout_constraintEnd_toEndOf="@+id/hidden"
        app:layout_constraintTop_toTopOf="@+id/hidden"
        app:srcCompat="@drawable/ic_clean" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:tint="@color/colorText"
        app:layout_constraintEnd_toEndOf="@+id/percentage"
        app:layout_constraintTop_toTopOf="@+id/percentage"
        app:srcCompat="@drawable/ic_clean" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:tint="@color/colorText"
        app:layout_constraintEnd_toEndOf="@+id/minimal"
        app:layout_constraintTop_toTopOf="@+id/minimal"
        app:srcCompat="@drawable/ic_clean" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:tint="@color/colorText"
        app:layout_constraintEnd_toEndOf="@+id/recent"
        app:layout_constraintTop_toTopOf="@+id/recent"
        app:srcCompat="@drawable/ic_clean" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:tint="@color/colorText"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintTop_toTopOf="@+id/name"
        app:srcCompat="@drawable/ic_clean" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:tint="@color/colorText"
        app:layout_constraintEnd_toEndOf="@+id/detail"
        app:layout_constraintTop_toTopOf="@+id/detail"
        app:srcCompat="@drawable/ic_clean" />

    <Button
        android:id="@+id/reset"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/color_button2bg"
        android:text="RESET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail" />

    <Button
        android:id="@+id/apply"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/color_button2bggreen"
        android:text="APPLY FILTERS"
        android:textColor="@color/colorTextWHITE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reset"
        app:layout_constraintTop_toBottomOf="@+id/minimal" />

</androidx.constraintlayout.widget.ConstraintLayout>